extends ../base.pug
include ../mixins/video.pug

block content 
    .profile-info-page-division
        .profile-info
            if loggedInUser.avatarUrl
                    if loggedInUser.avatarUrl.includes("github")
                        img(crossorigin="anonymous", src=loggedInUser.avatarUrl, width="100", height="100").profile-pic
                    else
                        img(crossorigin="anonymous", src=loggedInUser.avatarUrl, width="100", height="100").profile-pic
            h1=loggedInUser.name
        .profile-videos
            each video in user.videos.reverse()
                +video(video)
            else 
                .textBox
                    span This user do not have any videos yet.